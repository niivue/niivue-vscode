{
  "hooks": {
    "before-build-npm": [
      "python -m pip install 'jupyterlab>=4.0.0,<5'",
      "pnpm install --frozen-lockfile",
      "pnpm turbo build --filter=@niivue/jupyter"
    ],
    "before-build-python": [
      "pnpm install --frozen-lockfile",
      "pnpm turbo build --filter=@niivue/jupyter"
    ]
  },
  "options": {
    "ignore-glob": ["**/static/**", "**/dist/**", "**/node_modules/**", "*.md"],
    "ignore-links": [],
    "python-packages": ["apps/jupyter/"],
    "npm-packages": ["apps/jupyter/"]
  }
}
