{
  "name": "@niivue/pwa",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "Progressive Web App for NiiVue neuroimaging viewer",
  "license": "BSD-2-Clause",
  "author": {
    "name": "Korbinian Eckstein",
    "email": "korbinian90@gmail.com"
  },
  "homepage": "https://github.com/niivue/niivue-vscode",
  "repository": {
    "type": "git",
    "url": "https://github.com/niivue/niivue-vscode.git",
    "directory": "apps/pwa"
  },
  "bugs": {
    "url": "https://github.com/niivue/niivue-vscode/issues"
  },
  "keywords": [
    "pwa",
    "niivue",
    "neuroimaging",
    "medical-imaging",
    "nifti",
    "dicom",
    "visualization",
    "offline-first"
  ],
  "scripts": {
    "dev": "vite",
    "build": "node copy-assets.mjs && vite build",
    "build:analyze": "pnpm run build && npx vite-bundle-analyzer",
    "preview": "vite preview",
    "watch": "vite build --watch",
    "clean": "rm -rf dist build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "pnpm run lint -- --fix",
    "format": "prettier --write src/**/*.{ts,tsx,css,md}",
    "format:check": "prettier --check src/**/*.{ts,tsx,css,md}",
    "type-check": "tsc --noEmit",
    "test": "GIT_REPO_URL=https://github.com/niivue/niivue-vscode GIT_HASH=local vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "ci": "pnpm run lint && pnpm run type-check && pnpm run test:coverage && pnpm run test:e2e"
  },
  "dependencies": {
    "@niivue/dicom-loader": "^1.0.0",
    "@niivue/niivue": "^0.68.0",
    "@niivue/react": "workspace:*",
    "@preact/signals": "^2.3.2",
    "preact": "^10.28.2",
    "react-router-dom": "^7.9.4"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@niivue/dcm2niix": "^1.2.0",
    "@playwright/test": "^1.56.1",
    "@preact/preset-vite": "^2.10.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/preact": "^3.2.4",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "less": "^4.4.2",
    "lint-staged": "^16.2.6",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-plugin-pwa": "^1.1.0",
    "vite-plugin-virtual": "^0.4.0",
    "vitest": "^3.2.4",
    "workbox-build": "^7.3.0",
    "workbox-window": "^7.3.0"
  }
}
