{
  "name": "niivue",
  "displayName": "NiiVue",
  "description": "View NIfTI images (and a lot of other medical imaging formats)",
  "version": "2.5.7",
  "publisher": "KorbinianEckstein",
  "icon": "niivue_icon.png",
  "bugs": {
    "url": "https://github.com/niivue/niivue-vscode/issues",
    "email": "korbinian90+niivue@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/niivue/niivue-vscode"
  },
  "homepage": "https://github.com/niivue",
  "engines": {
    "vscode": "^1.70.0"
  },
  "license": "MIT",
  "categories": [
    "Visualization"
  ],
  "keywords": [
    "MRI",
    "NIfTI",
    "DICOM",
    "imaging",
    "medical",
    "neuroimaging",
    "neuroscience",
    "neuro",
    "brain",
    "fMRI",
    "DTI",
    "viewer"
  ],
  "extensionKind": [
    "workspace"
  ],
  "main": "./dist/extension.js",
  "browser": "./dist/extension.js",
  "scripts": {
    "build": "pnpm build:css && pnpm build:webview && pnpm compile",
    "build:css": "tailwindcss -i ./src/styles.css -o ./vscode-styles.css --minify",
    "build:webview": "cd ../../packages/niivue-react && BUILD_TARGET=vscode pnpm build && mkdir -p ../../apps/vscode/niivue && cp -r dist/* ../../apps/vscode/niivue/",
    "compile": "pnpm esbuild-base --minify",
    "dev": "pnpm esbuild-watch",
    "watch": "pnpm esbuild-watch",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild-watch": "pnpm esbuild-base --sourcemap --watch",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "package": "pnpm build && vsce package",
    "publish": "pnpm build && vsce publish"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "@types/vscode": "^1.70.0",
    "@vscode/vsce": "^3.6.0",
    "esbuild": "^0.25.8",
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.0",
    "autoprefixer": "^10.4.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "niivue.openWebLink",
        "title": "NiiVue: Open Web Link"
      },
      {
        "command": "niiVue.compareFromExplorer",
        "title": "NiiVue: Compare",
        "enablement": "listMultiSelection"
      },
      {
        "command": "niiVue.openFromExplorer",
        "title": "NiiVue: Open",
        "enablement": "!listMultiSelection"
      }
    ],
    "customEditors": [
      {
        "viewType": "niiVue.default",
        "displayName": "NiiVue",
        "selector": [
          {
            "filenamePattern": "*.dcm"
          },
          {
            "filenamePattern": "*.nii"
          },
          {
            "filenamePattern": "*.nii.gz"
          },
          {
            "filenamePattern": "*.mih"
          },
          {
            "filenamePattern": "*.mif"
          },
          {
            "filenamePattern": "*.mif.gz"
          },
          {
            "filenamePattern": "*.nhdr"
          },
          {
            "filenamePattern": "*.nrrd"
          },
          {
            "filenamePattern": "*.mhd"
          },
          {
            "filenamePattern": "*.mha"
          },
          {
            "filenamePattern": "*.mgh"
          },
          {
            "filenamePattern": "*.mgz"
          },
          {
            "filenamePattern": "*.v"
          },
          {
            "filenamePattern": "*.v16"
          },
          {
            "filenamePattern": "*.vmr"
          },
          {
            "filenamePattern": "*.mz3"
          },
          {
            "filenamePattern": "*.gii"
          },
          {
            "filenamePattern": "*.mnc"
          },
          {
            "filenamePattern": "*.mnc.gz"
          }
        ]
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "niiVue.compareFromExplorer",
          "when": "listMultiSelection"
        },
        {
          "command": "niiVue.openFromExplorer",
          "when": "!listMultiSelection"
        }
      ]
    },
    "languages": [
      {
        "id": "niiVue",
        "extensions": [
          ".dcm",
          ".nii",
          ".nii.gz",
          ".mih",
          ".mif",
          ".mif.gz",
          ".nhdr",
          ".nrrd",
          ".mhd",
          ".mha",
          ".mgh",
          ".mgz",
          ".v",
          ".v16",
          ".vmr",
          ".mz3",
          ".gii",
          ".mnc",
          ".mnc.gz"
        ],
        "icon": {
          "light": "./niivue_icon_transparent_contrast.png",
          "dark": "./niivue_icon_transparent_contrast.png"
        }
      }
    ],
    "configuration": {
      "type": "object",
      "title": "NiiVue Settings",
      "properties": {
        "niivue.showCrosshairs": {
          "type": "boolean",
          "default": true,
          "description": "Show crosshairs on images by default."
        },
        "niivue.interpolation": {
          "type": "boolean",
          "default": true,
          "description": "Enable interpolation by default."
        },
        "niivue.colorbar": {
          "type": "boolean",
          "default": false,
          "description": "Show colorbar by default."
        },
        "niivue.radiologicalConvention": {
          "type": "boolean",
          "default": false,
          "description": "Use radiological convention by default."
        },
        "niivue.zoomDragMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable zoom drag mode by default."
        },
        "niivue.defaultVolumeColormap": {
          "type": "string",
          "default": "gray",
          "description": "Default colormap to use for volume images (background images)."
        },
        "niivue.defaultOverlayColormap": {
          "type": "string",
          "default": "redyell",
          "description": "Default colormap to use for overlay images."
        }
      }
    }
  },
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "activationEvents": [
    "*"
  ]
}
