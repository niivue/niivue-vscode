{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    /* Project-specific overrides */
    "useDefineForClassFields": true,
    "allowJs": true,
    "jsx": "react-jsx",
    
    /* Linting */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@niivue/*": [
        "packages/*/src"
      ]
    }
  },
  "include": [],
  "references": [
    {
      "path": "./apps/vscode"
    },
    {
      "path": "./apps/pwa"
    },
    {
      "path": "./packages/niivue-react"
    }
  ]
}