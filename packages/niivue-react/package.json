{
  "name": "@niivue/react",
  "version": "0.1.0",
  "type": "module",
  "description": "React components and utilities for NiiVue neuroimaging viewer",
  "license": "BSD-2-Clause",
  "author": {
    "name": "Korbinian Eckstein",
    "email": "korbinian90@gmail.com"
  },
  "homepage": "https://github.com/niivue/niivue-vscode",
  "repository": {
    "type": "git",
    "url": "https://github.com/niivue/niivue-vscode.git",
    "directory": "packages/niivue-react"
  },
  "bugs": {
    "url": "https://github.com/niivue/niivue-vscode/issues"
  },
  "keywords": [
    "niivue",
    "react",
    "preact",
    "neuroimaging",
    "medical-imaging",
    "nifti",
    "dicom",
    "visualization",
    "components"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./components": {
      "import": "./dist/components/index.js",
      "types": "./dist/components/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "concurrently \"vite build --watch\" \"tsc --emitDeclarationOnly --declaration --outDir dist --watch\"",
    "dev:vscode-sync": "concurrently \"BUILD_TARGET=vscode vite build --mode development --watch\" \"node scripts/watch-and-sync.mjs\"",
    "dev:types-only": "tsc --emitDeclarationOnly --declaration --outDir dist --watch",
    "build": "vite build && tsc --emitDeclarationOnly --declaration --outDir dist",
    "preview": "vite",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@niivue/dcm2niix": "^1.2.0",
    "@niivue/minc-loader": "^1.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/preact": "^3.2.4",
    "@vitejs/plugin-legacy": "^7.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "9.2.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "vite-plugin-virtual": "^0.4.0",
    "vitest": "^3.2.4",
    "workbox-window": "^7.3.0"
  },
  "peerDependencies": {
    "@niivue/dicom-loader": "^1.0.0",
    "@niivue/niivue": "0.62.1",
    "@preact/signals": "^2.0.1",
    "preact": "^10.24.1"
  }
}
