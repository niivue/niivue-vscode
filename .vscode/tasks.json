{
  "version": "2.0.0",
  "tasks": [
    // ====================
    // Workspace-level tasks (orchestrated by Turborepo)
    // ====================
    {
      "label": "install",
      "type": "shell",
      "command": "pnpm",
      "args": ["install"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "detail": "Install all dependencies for the monorepo"
    },
    {
      "label": "build",
      "type": "shell",
      "command": "turbo",
      "args": ["build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$tsc"],
      "detail": "Build all packages (uses Turborepo cache and parallel execution)"
    },
    {
      "label": "dev",
      "type": "shell",
      "command": "turbo",
      "args": ["dev", "--parallel"],
      "isBackground": true,
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "detail": "Start all development servers and watch modes in parallel"
    },
    {
      "label": "test",
      "type": "shell",
      "command": "turbo",
      "args": ["test"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "detail": "Run all tests (orchestrated by Turborepo)"
    },
    {
      "label": "lint",
      "type": "shell",
      "command": "turbo",
      "args": ["lint"],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$eslint-stylish"],
      "detail": "Lint all packages (orchestrated by Turborepo)"
    },
    {
      "label": "type-check",
      "type": "shell",
      "command": "turbo",
      "args": ["type-check"],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$tsc"],
      "detail": "Type-check all TypeScript code (orchestrated by Turborepo)"
    },
    {
      "label": "format",
      "type": "shell",
      "command": "pnpm",
      "args": ["format"],
      "group": "build",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "detail": "Format all code with Prettier"
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "turbo",
      "args": ["clean"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "detail": "Clean all build artifacts (orchestrated by Turborepo)"
    },

    // ====================
    // Special runtime tasks (not in Turborepo pipeline)
    // ====================
    {
      "label": "jupyter:start",
      "type": "shell",
      "command": "jupyter",
      "args": ["lab", "--ip=0.0.0.0", "--port=8888", "--no-browser", "--allow-root"],
      "isBackground": true,
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "."
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Jupyter Server.*is running at:",
          "endsPattern": "^.*Use Control-C to stop this server"
        }
      },
      "detail": "Start JupyterLab server (runtime server, not a build task)"
    }
  ]
}
