{
  "name": "@niivue/monorepo",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "description": "NiiVue monorepo with multiple packages and applications",
  "homepage": "https://github.com/niivue/niivue-vscode",
  "repository": {
    "type": "git",
    "url": "https://github.com/niivue/niivue-vscode"
  },
  "license": "BSD-2-Clause",
  "author": {
    "name": "Korbinian Eckstein",
    "email": "korbinian90@gmail.com"
  },
  "keywords": [
    "monorepo",
    "neuroimaging",
    "medical-imaging",
    "nifti",
    "dicom",
    "niivue",
    "visualization",
    "vscode-extension",
    "jupyterlab-extension",
    "pwa"
  ],
  "scripts": {
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "dev": "turbo dev --parallel",
    "dev:vscode": "pnpm --filter niivue dev",
    "dev:source": "concurrently \"pnpm --filter @niivue/react dev:types-only\" \"pnpm --filter @niivue/pwa dev\"",
    "clean": "turbo clean && rm -rf node_modules packages/*/node_modules apps/*/node_modules",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "watch": "turbo watch",
    "versions:check": "syncpack list-mismatches",
    "versions:fix": "syncpack fix-mismatches",
    "versions:update": "syncpack update",
    "precommit": "pnpm versions:check && pnpm format:check",
    "update:safe": "pnpm update --recursive && pnpm versions:fix && turbo build",
    "update:all": "pnpm update --recursive --latest && pnpm versions:fix && turbo build",
    "update:check": "pnpm dlx syncpack list && echo '\\nğŸ“‹ Run pnpm update:safe for safe updates or pnpm update:all for latest versions'",
    "changeset": "changeset",
    "version": "changeset version && pnpm install --no-frozen-lockfile",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.38.0",
    "@preact/preset-vite": "^2.10.2",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-legacy": "^7.2.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "16.4.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "syncpack": "^13.0.4",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.12",
    "vite-plugin-dts": "^4.5.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.18.3",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": "prettier --write"
  }
}
