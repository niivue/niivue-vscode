{
  "name": "@niivue/monorepo",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "description": "NiiVue monorepo with multiple packages and applications",
  "homepage": "https://github.com/niivue/niivue-vscode",
  "repository": {
    "type": "git",
    "url": "https://github.com/niivue/niivue-vscode"
  },
  "license": "MIT",
  "scripts": {
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "dev": "turbo dev --parallel",
    "dev:source": "concurrently \"pnpm --filter @niivue/react dev:types-only\" \"pnpm --filter @niivue/pwa dev\"",
    "clean": "turbo clean && rm -rf node_modules packages/*/node_modules apps/*/node_modules",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "watch": "turbo watch",
    "versions:check": "syncpack list-mismatches",
    "versions:fix": "syncpack fix-mismatches",
    "versions:update": "syncpack update",
    "precommit": "pnpm versions:check && pnpm format:check",
    "update:safe": "pnpm update --recursive && pnpm versions:fix && turbo build",
    "update:all": "pnpm update --recursive --latest && pnpm versions:fix && turbo build",
    "update:check": "pnpm dlx syncpack list && echo '\nğŸ“‹ Run pnpm update:safe for safe updates or pnpm update:all for latest versions'"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@preact/preset-vite": "^2.10.2",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-legacy": "^7.1.0",
    "concurrently": "9.2.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^15.0.0",
    "prettier": "^3.6.2",
    "syncpack": "^13.0.4",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.0.6",
    "vite-plugin-dts": "^4.5.4"
  },
  "pnpm": {
    "overrides": {
      "vite": "^7.0.6"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad"
}